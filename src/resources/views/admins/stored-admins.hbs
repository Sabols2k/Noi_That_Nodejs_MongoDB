<div class="mt-4">

<a href="/admin/create" class="btn btn-primary">Add new admin</a>
    <h3>Danh sách Admins</h3>
  <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col" colspan="2">Thời gian tạo</th>
    </tr>
  </thead>
  <tbody>
      {{#each admins}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.username}}</td>
      <td>{{this.name}}</td>
      <td>{{this.age}}</td>
      <td>{{this.createAt}}</td>
      <td>
            <a href="/admin/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
            <a href=""  data-toggle="modal" data-id="{{this._id}}" data-target="#delete_courses_modal" class="btn btn-primary">Xóa</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>


{{!-- confirm delete courses --}}

<div class="modal fade" id="delete_courses_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn chắc chắn muốn xóa Admin này! 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-course-form" method="POST" >
       
    </form>

<script>
 document.addEventListener('DOMContentLoaded',function(){
    var courseId; 
    var deleteForm = document.forms['delete-course-form'];
    var btnDeleteCourse = document.getElementById('btn-delete-course');
    // when dialog confirm clicked 
    $('#delete_courses_modal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget) ;
      courseId = button.data('id') ;
      
    });
  
   
    
    btnDeleteCourse.onclick = function (){
      deleteForm.action = '/admin/'+ courseId + '?_method=DELETE';
      deleteForm.submit();
    }


 });
</script>